<template>
    <view class="backLayerContainer">
        <view class='backLayer' @tap="disabled"></view>
        <view class='comentCotioner'>
            <textarea @input="getContent" placeholder="请输入评论" />
            <view @tap="sendComment" class='button'>发 布</view>
        </view>
    </view>
</template>

<script>
    import wepy from 'wepy'
    import {
        POST
    } from '../utils'
    export default class SendComment extends wepy.component {
        data = {
            content: ''
        }
        props = {
            cardId: Number
        }
        methods = {
            getContent(e) {
                this.content = e.detail.value
            },
            sendComment() {
                let content = this.content;
                if (this.content.length <= 0) {
                    wx.showModal({
                        title: '提示',
                        content: '评论内容不能为空，请重新填写后发布！',
                        showCancel: false
                    })
                    return;
                }
                let localUrl = this.$parent.$parent.globalData.backgroundCheckUrl
                let session_key = wx.getStorageSync('session_key');
                let commentData = {}
                commentData.content = content;
                commentData.card_id = this.cardId
                let that = this
                POST(`${localUrl}/comment/saveComment`, {
                    session_key,
                    commentData
                }, (res) => {
                    wepy.showModal({
                        title: '发送成功',
                        icon: 'success',
                        confirmColor: '#6CACF4',
                        showCancel: false,
                        success() {
                            that.$emit('closePopup', 1)
                        }
                    })
                })
            },
            disabled() {
                this.$emit('closePopup')
                this.$apply();
            }
        }
    }
</script>

